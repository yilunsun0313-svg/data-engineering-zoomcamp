# run a docker container with a Postgres database named "ny_taxi"
docker run -it --rm \
  -e POSTGRES_USER="root" \
  -e POSTGRES_PASSWORD="root" \
  -e POSTGRES_DB="ny_taxi" \
  -v ny_taxi_postgres_data:/var/lib/postgresql \
  -p 5432:5432 \
  postgres:18

# -h localhost → connect to your computer
# -p 5432 → connect to port 5432 on your computer
uv run pgcli -h localhost -p 5432 -u root -d ny_taxi

# since we ran a docker contain with -p 5432:5432
# this means HOST (your laptop) 5432  →  CONTAINER 5432
# so when pgcli connects to localhost:5432, Docker forwards it into the container


docker run -it \
  -e POSTGRES_USER="root" \
  -e POSTGRES_PASSWORD="root" \
  -e POSTGRES_DB="ny_taxi" \
  -v ny_taxi_postgres_data:/var/lib/postgresql \
  -p 5432:5432 \
  --network=pg-network \
  --name pgdatabase \
  postgres:18


docker run -it --rm \
  --network=pg-network \
  taxi_ingest:v001 \
    --user=root \
    --password=root \
    --host=pgdatabase \  # this now is the name of the container running Postgres!!!
    --port=5432 \
    --db=ny_taxi \
    --table=yellow_taxi_trips_2021_1 


# run a container with pgAdmin image to manage the Postgres database
docker run -it \
  -e PGADMIN_DEFAULT_EMAIL="admin@admin.com" \
  -e PGADMIN_DEFAULT_PASSWORD="root" \
  -v pgadmin_data:/var/lib/pgadmin \
  -p 8085:80 \
  --network=pg-network \
  --name pgadmin \
  dpage/pgadmin4

# After running the Docker compose yaml file, we would need to ingest the data again
docker run -it --rm \
  --network=pipeline_default \
  taxi_ingest:v001 \
    --user=root \
    --password=root \
    --host=pgdatabase \
    --port=5432 \
    --db=ny_taxi \
    --table=yellow_taxi_trips_2021_1 